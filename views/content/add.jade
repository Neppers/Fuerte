extends ../layout/logged-in

block content
    .page-header: h1 Add content
    +messages(messages)

    - formAction = (parent) ? '/content/add-child/' + parent : '/content/add'
    form(action=formAction, method="POST")
        .row
            .col-sm-4
                +input("text", "Title", "title")(value=form.title)
                +input("text", "Path", "path")(value=form.path)
                +input("text", "Template", "template")(value=form.template)
                +input("text", "Meta description", "meta.description")(value=form['meta.description'])
                +input("text", "Meta keywords", "meta.keywords")(value=form['meta.keywords'])
            .col-sm-8
                +textarea("Content", "body")=form.body    
        +submit("Add content")
            
block scripts
    script(src="/javascripts/ckeditor/ckeditor.js")
    script.
        CKEDITOR.replace('body', {customConfig: '/javascripts/ckeditor-config.js'});