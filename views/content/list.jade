extends ../layout/logged-in

mixin actions(id)
    a(href="/content/add-child/#{id}") Add
    | 
    a(href="/content/edit/#{id}") Edit
    | 
    a(href="/content/delete/#{id}") Delete

block content
    each message in messages
        p=message
    h1=project.name
    h2=moment(project.created).format('DD/MM/YYYY')
    if content
        ul
            each item in content
                li
                    | #{item.title} 
                    +actions(item._id)
                    if item.children.length > 0
                        ul
                            each child in item.children
                                li
                                    | #{child.title} 
                                    +actions(child._id)
                                    if child.children.length > 0
                                        ul
                                            each c in child.children
                                                li
                                                    | #{c.title} 
                                                    +actions(c._id)
    a(href="/content/add") Add content