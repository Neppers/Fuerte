extends ../layout/logged-in

block content
    .page-header
        h1
            | #{content.title} 
            small #{project.url + content.path}
    .row
        .col-sm-2
            dl
                dt Status
                dd=content.status
                dt Tags
                if content.tags.length > 0
                    dd=content.tags.join(', ')
                else
                    dd No tags
                dt Meta description
                dd NYI
                dt Meta keywords
                dd NYI
                dt Taxonomy terms
                dd NYI
            dl
                dt Author
                dd=content._author.fullName
                dt Last login
                dd=moment(content._author.lastLogin).format('DD/MM/YYYY HH:mm')
                dt Email
                dd=content._author.local.email
            dl
                dt Created
                dd=moment(content.created).format('DD/MM/YYYY HH:mm')
                dt Last modified
                dd=moment(content.modified).format('DD/MM/YYYY HH:mm')
        .col-sm-10
            .well!=content.body
    .btn-group
        a.btn.btn-primary(href="/content/edit/#{content.id}") Edit
        a.btn.btn-default(href="/content/delete/#{content.id}") Delete
        a.btn.btn-default(href="/api/content/#{content.id}") JSON