mixin messages(messages)
    if messages.error
        .alert.alert-danger
            each message in messages
                p=message
    if messages.info
        .alert.alert-info
            each message in messages
                p=message
    if messages.warning
        .alert.alert-warning
            each message in messages
                p=message
    if messages.success
        .alert.alert-success
            each message in messages
                p=message