extends ../layout/logged-in

block content
    .page-header: h1 Manage projects
    +messages(messages)
    ul.nav.nav-tabs(role="tablist")
        li: a(href="/settings/users")
            span.icon.icon-user
            |  Users
        li.active: a(href="/settings/projects")
            span.icon.icon-wallet
            |  Projects
    table.table
        thead: tr
            th Name
            th URL
            th Created
        tbody
        each project in projects
            tr
                td=project.name
                td=project.url
                td=moment(project.created).format('DD/MM/YYYY HH:mm')