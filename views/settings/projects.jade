extends ../layout/logged-in

block content
    .page-header: h1 Manage projects
    +messages(messages)
    ul.nav.nav-tabs(role="tablist")
        li: a(href="/settings/users")
            span.icon.icon-user
            |  Users
        li.active: a(href="/settings/projects")
            span.icon.icon-wallet
            |  Projects
    table.table
        thead: tr
            th Name
            th URL
            th Created
            th Actions
        tbody
        each project in projects
            tr
                td=project.name
                td=project.url
                td=moment(project.created).format('DD/MM/YYYY HH:mm')
                td
                    a.btn-action(href="/settings/projects/edit/#{project.id}"): span.glyphicon.glyphicon-pencil
                    a.btn-action(href="/settings/projects/delete/#{project.id}"): span.glyphicon.glyphicon-trash
    a.btn.btn-primary(href="/settings/projects/add") Create project